{% extends "layout.njk" %}

{% block content %}

    <div class="card">

        <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>

        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome Completo</div>
                <div>{{teacher.nome}}</div>
            </div>

             <div class="item">
                <div>Idade</div>
                <div>{{teacher.idade}}</div>
            </div>

             <div class="item">
                <div>Formação</div>
                <div>{{teacher.formacao}}</div>
            </div>

             <div class="item">
                <div>Modo de Aula</div>
                <div>{{teacher.modalidade}}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>

                    {% for materia in teacher.materias %}
                    <span>{{materia}}</span>
                    {% endfor %}

                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>

            <a href="/edit" class="edit">editar</a>

        </section>

    </div>
    
{% endblock content %}