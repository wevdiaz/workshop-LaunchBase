<div class="item">
                <div>Avatar URL</div>
                <div>
                    <input type="url"
                           name="avatar_url" 
                           placeholder="http://"
                           value= "{{student.avatar_url}}"
                           >
                </div>
            </div>

            <div class="item">
                <div>Estudante</div>
                <div>
                    <input type="text"
                           name="nome"
                           placeholder="Nome Completo"
                           value="{{student.nome}}"
                           >
                </div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>
                    <input type="email"
                           name="email"
                           placeholder="@"
                           value="{{student.email}}"
                           >
                </div>
            </div>

             <div class="item">
                <div>Nascimento</div>
                <div>
                    <input type="date" 
                           name="nascimento"
                           value="{{student.nascimento}}"
                           >
                </div>
            </div>

            <div class="item">
                <div>Ano Escolar</div>
                <div>
                    <select name="anoEscolar">

                        <option 
                            value="5"
                            {% if student.anoEscolar == "5" %}
                                selected
                            {% endif %}>5º ano do Ensino Fundamental</option>

                        <option 
                            value="6"
                            {% if student.anoEscolar == "6" %}
                                selected
                            {% endif %}>6º ano do Ensino Fundamental</option>
                        
                        <option 
                            value="7"
                            {% if student.anoEscolar == "7" %}
                                selected
                            {% endif %}>7º ano do Ensino Fundamental</option>

                        <option 
                            value="8"
                            {% if student.anoEscolar == "8" %}
                                selected
                            {% endif %}>8º ano do Ensino Fundamental</option>

                        <option 
                            value="9"
                            {% if student.anoEscolar == "9" %}
                                selected
                            {% endif %}>9º ano do Ensino Fundamental</option>

                        <option 
                            value="1"
                            {% if student.anoEscolar == "1" %}
                                selected
                            {% endif %}>1º ano do Ensino Médio</option>

                        <option 
                            value="2"
                            {% if student.anoEscolar == "2" %}
                                selected
                            {% endif %}>2º ano do Ensino Médio</option>

                        <option 
                            value="3"
                            {% if student.anoEscolar == "3" %}
                                selected
                            {% endif %}>3º ano do Ensino Médio</option>
                    </select>
                </div>
            </div>

            <div class="item">
                <div>Carga Horária</div>
                <div>
                    <input type="number" 
                           name="cargaHoraria"
                           min="0"
                           value="{{student.cargaHoraria}}"
                           >
                </div>
            </div>       

            <button type="submit">Salvar</button> 